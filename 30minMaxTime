int Player1Time = 1800;
int Player2Time = 1800;

bool Player1Active = true;
bool Player2Active = false;


while (Player1Time > 0 || Player2Time > 0)
{
	if (Player1Active == true)
	{
		delay(1000);
		Player1Time - 1;
		if (buttonPressed == true)
		{
			Player1Active = false;
			Player2Active = true;
		}
	}
	else
	{
		delay(1000);
		Player2Time - 1;
		if (buttonPressed == true)
		{
			Player1Active = true;
			Player2Active = false;
		}
	}
}
